@*---All Templates---*@
<section class="AllNFTs">
    <br />
    <h3>Templates</h3>
    <br />

    <div class="card-group">

        @foreach (var item in Model.AllTemplatesDataPocos)
        {
            <div class="col-2">
                <div class="card">

                    <img class="card-img-top" src="~/Media/Cards/Black.png" alt="Image">
                   
                    <div class="card-body text-center">
                        <p class="card-text">Name: @item.Name <br /></p>
                        <a class="btn btn-primary" asp-controller="Templates" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <br />
                        <br />
                        <a class="btn btn-primary">Published?</a>
                    </div>
                </div>
            </div>
        }

    </div>
