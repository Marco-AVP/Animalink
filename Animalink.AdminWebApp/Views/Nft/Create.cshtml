@model Animalink.AdminWebApp.Models.Nfts.TemplatesViewModel

@{
    ViewData["Title"] = "Template Creator";
}


@section Styles{
    <link rel="stylesheet" href="~/css/TemplateCreatorStyle.css" />
}



@*---Header---*@
<section>
    <br />
    <br />
    <nav class="nav nav-pills flex-column flex-sm-row">
        <a class="flex-sm-fill text-sm-center nav-link" aria-current="page" asp-controller="Nft" asp-action="Index">Templates</a>
        <a class="flex-sm-fill text-sm-center nav-link active" aria-current="page" asp-controller="Nft" asp-action="Create">Template Creator</a>
    </nav>
    <br />
    <br />
</section>


@*---Template ---*@


    @*Animal Template*@

  
<section class="NftInfo">

    <div class="container">
        <div class="row">

            <div class="col">
                <img src="" class="img-fluid" alt="Image" style="width:100%;height:100%;" />
            </div>

            <div class="col" id="Attributes" style="width:100%;height:70%;">
                <h3 id="AttributesTitle">Attributes</h3>
                <p><b>Name: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Type: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Rarity: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Level: </b><input type="text" class="form-control" placeholder=""></p>

                <p>Species: <input type="text" class="form-control" placeholder=""></p>
                <p>Taxonomy: <input type="text" class="form-control" placeholder=""></p>
                <p>Habitat: <input type="text" class="form-control" placeholder=""></p>
                <p>IUCN: <input type="text" class="form-control" placeholder=""></p>

                <p><b>Schema: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Collection: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Max Supply: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Number Available: </b><input type="text" class="form-control" placeholder=""></p> @*api*@
                <p><b>Is Burnable: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Is Tranferable: </b><input type="text" class="form-control" placeholder=""></p>
                <p><b>Image Reference: </b><input type="text" class="form-control" placeholder=""></p>




            </div>

            <div class="col">
                
            </div>

        </div>

        <div class="row">
            <div class="col">
                <br />
                <br />
                <br />
            </div>
        </div>

        <div class="row">

            <div class="col" id="Description">
                <h2>Description</h2>
                <p>
                    <input type="text" class="form-control" placeholder="">
                </p>
            </div>

            <div class="col">
                
            </div>

            <div class="col" id="Buy">
                <p>Price: <input type="text" class="form-control" placeholder=""> </p>
            </div>

        </div>
    </div>

    <br />
    <a class="flex-sm-fill text-sm-center nav-link" aria-current="page" asp-controller="Nft" asp-action="Create">Create Template</a>
</section>

