@model Animalink.WebApp.Models.Nfts.NftViewModel

@{
    ViewData["Title"] = "NFT Page";
}

@section Styles{
    <link rel="stylesheet" href="~/css/NftInfoStyle.css" />
}



@*---ImageBanner---*@
<section class="NftInfoBanner">
    <br />
    <a class="btn" style="background-color:azure" asp-controller="AllNfts" asp-action="ShowAllNfts">Back</a>
    <br />
    <br />
</section>


@*---Header---*@
<section class="Introduction">
    <br />
    <h3>@Model.NftDataPocos.FirstOrDefault().NftName</h3>
    <br />
</section>


@*---Template ---*@

@foreach (var item in Model.NftDataPocos)
{
    //Animal Template
    
    if (item.NftType == "Animal")
    {
        <section class="NftInfo">

            <div class="container">
                <div class="row">

                    <div class="col">
                        <img src="~/Media/Frog_mockup.png" class="img-fluid" alt="Image" style="width:100%;height:100%;" />
                    </div>

                    <div class="col" id="Attributes" style="width:100%;height:70%;">
                        <h3 id="AttributesTitle">Attributes</h3>
                        <p><b>Name: </b>@item.NftName</p>
                        <p><b>Type: </b>@item.NftType</p>
                        <p><b>Rarity: </b>@item.Rarity</p>
                        <p><b>Level: </b>@item.RarityLevel</p>

                        <p>Species: @item.Species</p>
                        <p>Taxonomy: @item.Taxonomy</p>
                        <p>Habitat: @item.Habitat</p>
                        <p>IUCN: @item.IUCN (@item.IUCNAcronym)</p>

                        <p><b>Schema: </b>@item.Schema</p>
                        <p><b>Collection: </b>@item.Collection</p>
                        <p><b>Max Supply: </b>@item.MaxSupply</p>
                        <p><b>Number Available: </b>@item.NumberAvailable</p> @*api*@
                        <p><b>Is Burnable: </b>@item.IsBurnable</p>
                        <p><b>Is Tranferable: </b>@item.IsTransferable</p>
                        <p><b>Image Reference: </b>@item.ImageReference</p>




                    </div>

                    <div class="col">
                        3 of 3
                    </div>

                </div>

                <div class="row">
                    <div class="col">
                        <br />
                        <br />
                        <br />
                    </div>
                </div>

                <div class="row">

                    <div class="col" id="Description">
                        <h2>Description</h2>
                        <p>
                            @item.Description, Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                            Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                            when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                        </p>
                    </div>

                    <div class="col">
                        2 of 3
                    </div>

                    <div class="col" id="Buy">
                        <p>Price: @item.Price </p>
                        <a class="btn btn-primary">Buy</a>
                    </div>

                </div>
            </div>

            <br />
        </section>
    }
    else if (item.NftType == "Event")
    {
        //Event Template

            <section class="NftInfo">

                <div class="container">
                    <div class="row">

                        <div class="col">
                            <img src="~/Media/Frog_mockup.png" class="img-fluid" alt="Image" style="width:100%;height:100%;" />
                        </div>

                        <div class="col" id="Attributes" style="width:100%;height:70%;">
                            <h3 id="AttributesTitle">Attributes</h3>
                            <p><b>Name: </b>@item.NftName</p>
                            <p><b>Type: </b>@item.NftType</p>
                            <p><b>Rarity: </b>@item.Rarity</p>
                            <p><b>Schema: </b>@item.Schema</p>
                            <p><b>Collection: </b>@item.Collection</p>
                            <p><b>Max Supply: </b>@item.MaxSupply</p>
                            <p><b>Number Available: </b>@item.NumberAvailable</p>
                            <p><b>Is Burnable: </b>@item.IsBurnable</p>
                            <p><b>Is Tranferable: </b>@item.IsTransferable</p>
                            <p><b>Image Reference: </b>@item.ImageReference</p>
                        </div>

                        <div class="col">
                            3 of 3
                        </div>

                    </div>

                    <div class="row">
                        <div class="col">
                            <br />
                            <br />
                            <br />
                        </div>
                    </div>

                    <div class="row">

                        <div class="col" id="Description">
                            <h2>Description</h2>
                            <p>
                                @item.Description, Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                            Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                            when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                        </p>
                    </div>

                    <div class="col">
                        2 of 3 (wider)
                    </div>

                    <div class="col" id="Buy">
                        <p>Price: @item.Price </p>
                        <a class="btn btn-primary">Buy</a>
                    </div>

                </div>
            </div>

            <br />
        </section>
    }


}

