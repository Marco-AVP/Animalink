@model Animalink.AdminWebApp.Models.Templates.TemplatesViewModel

@{
    ViewData["Title"] = "Templates";
}


<head>
    @section Styles{
        <link rel="stylesheet" href="~/css/AllTemplatesStyle.css" /> }
        <script src="~/js/AllTemplatesJS.js"></script>
</head>



<section>
    <br />

    <div class="container">
        <div class="row">
            <div class="col">
                <a type="button" class="btn btn-primary" asp-controller="Templates" asp-action="Index">Templates</a>
            </div>
            <div class="col">
                <a type="button" class="btn btn-primary" asp-controller="Templates" asp-action="CreatorPage">Creator</a>
            </div>
            
            <div class="row">
                <div class="col">


                        @using (Html.BeginForm())
                        {
                            <div class="row">
                                <div class="col">
                                    Type
                                    @Html.DropDownListFor(x => x.TemplateTypeList,
                                    Model.GetTemplateTypeList.Select(x => new SelectListItem { Text = x.TemplateType, Value = x.TemplateType.ToString() }),
                                    new { @class = "form-control chosen-select", @multiple = true })
                                </div>
                                <div class="col">
                                    Rarity
                                    @Html.DropDownListFor(x => x.RarityList,
                                    Model.GetRarityList.Select(x => new SelectListItem { Text = x.Rarity, Value = x.Rarity }),
                                    new { @class = "form-control chosen-select", @multiple = true })
                                </div>
                                <div class="col">
                                    Collection
                                    @Html.DropDownListFor(x => x.CollectionList,
                                        Model.GetCollectionList.Select(x => new SelectListItem { Text = x.Collection, Value = x.Collection }),
                                        new { @class = "form-control chosen-select", @multiple = true })
                                </div>
                                <div class="col">
                                    Name
                                    @Html.DropDownListFor(x => x.TemplateNameList,
                                    Model.GetTemplateNameList.Select(x => new SelectListItem { Text = x.TemplateName, Value = x.TemplateName }),
                                    new { @class = "form-control chosen-select", @multiple = true })
                                </div>
                                <div class="col">
                                    <input type="submit" name="name" value="Submit" />
                                </div>
                            </div>
                        }


